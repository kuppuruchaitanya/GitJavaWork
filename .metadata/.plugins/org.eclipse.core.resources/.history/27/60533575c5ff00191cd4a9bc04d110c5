import java.util.Scanner;

public class PyramidPattern {
	public static void main (String args[])
	{
		int i,sp,row,k=0;
		Scanner sc=new Scanner(System.in);
		System.out.print("Enter Number of Rows");
		row=sc.nextInt();
		for(i=0;i<=row;i++)
		{
			for(sp=1;sp<=(row-i);sp++)
			{
				System.out.print(" ");
			}
			while(k !=(2*i-1))
			{
				System.out.println("* ");
				k++;
				
			}
			k=0;
			System.out.println();
		}
		
	}

}
